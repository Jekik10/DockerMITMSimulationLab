# Utilizza l'immagine ufficiale di Alpine
FROM ubuntu:latest

# Installa il pacchetto ping
RUN apt-get update && \
    apt-get install -y \
    iproute2 \
    ansible \
    # Non essenziali
    net-tools \
    netcat-traditional \
    vim \
    tcpdump \
    iputils-ping

# Copia la configurazione del server e esegue solo se non Ã¨ vuota
COPY server-config.yml /.ansible/server-config.yml

# Script di avvio
COPY script/server-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/server-entrypoint.sh

# Esegui lo script all'avvio
ENTRYPOINT ["/usr/local/bin/server-entrypoint.sh"]
CMD ["sleep", "infinity"]