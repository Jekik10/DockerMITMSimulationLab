FROM debian:stable-slim

RUN apt-get update && \
    apt-get install -y \
    iptables \
    iproute2 \
    # Non-essential packages
    net-tools \
    vim \
    tcpdump \
    iputils-ping

# Entrypoint script
COPY script/router-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/router-entrypoint.sh

# Entrypoint
ENTRYPOINT ["/usr/local/bin/router-entrypoint.sh"]
CMD ["sleep", "infinity"]